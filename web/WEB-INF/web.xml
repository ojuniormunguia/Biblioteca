<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>SrvDocumentos</servlet-name>
        <servlet-class>Servlets.SrvDocumentos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayDataServlet</servlet-name>
        <servlet-class>Servlets.DisplayDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvInfoLibro</servlet-name>
        <servlet-class>Servlets.SrvInfoLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvBusqueda</servlet-name>
        <servlet-class>Servlets.SrvBusqueda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvAdd</servlet-name>
        <servlet-class>Servlets.SrvAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvContinuar</servlet-name>
        <servlet-class>Servlets.SrvContinuar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDocumentServlet</servlet-name>
        <servlet-class>Servlets.DeleteDocumentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvDelete</servlet-name>
        <servlet-class>Servlets.SrvDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvDocumentosAdv</servlet-name>
        <servlet-class>Servlets.SrvDocumentosAdv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SrvDocumentos</servlet-name>
        <url-pattern>/SrvDocumentos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayDataServlet</servlet-name>
        <url-pattern>/DisplayDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvInfoLibro</servlet-name>
        <url-pattern>/SrvInfoLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvBusqueda</servlet-name>
        <url-pattern>/SrvBusqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvAdd</servlet-name>
        <url-pattern>/SrvAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvContinuar</servlet-name>
        <url-pattern>/SrvContinuar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDocumentServlet</servlet-name>
        <url-pattern>/DeleteDocumentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvDelete</servlet-name>
        <url-pattern>/SrvDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvDocumentosAdv</servlet-name>
        <url-pattern>/SrvDocumentosAdv</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
